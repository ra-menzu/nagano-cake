<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :氏名漢字 %>
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name"%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"%>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana"%>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"%>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode"%>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :street_adress, autofocus: true, autocomplete: "street_adress"%>
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_nember, autofocus: true, autocomplete: "phone_number"%>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
