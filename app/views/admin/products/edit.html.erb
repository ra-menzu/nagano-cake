<div class="container">
    <h3>商品編集 画面</h3>
    <div class="row">
        <%= form_for @product, url:admin_product_path do |f| %>
            <div class="col-lg-4">
                <%= f.file_field :image_id %>
            </div>
            <div class = "col-lg-8">
                <table>
                    <tr>
                        <th>商品名</th>
                        <td><%= f.text_field :name %></td>
                    </tr>
                    <tr>
                        <th>商品説明</th>
                        <td><%= f.text_area :comment %></td>
                    </tr>
                    <tr>
                        <th>ジャンル</th>
                        <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
                    </tr>
                    <tr>
                        <th>税抜価格</th>
                        <td><%= f.text_field :non_tax_price %>円</td>
                    </tr>
                    <tr>
                        <th>販売ステータス</th>
                        <td><%= f.select :sales_status, Product.sales_statuses.keys %></td>
                    </tr>
                </table>
                <div class="botan">
                        <%= f.submit '新規登録', class:"btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
    </div>
</div>