<h2>注文履歴一覧</h2>
<div class="container">
	<div class ="row">

	<table>
		<colgroup span=""></colgroup>

		<thead>
			<tr>
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス</th>
			</tr>
		</thead>
			<% @guests.each do |guest| %>
				<% @ordered_items.each do |ordered_item| %>
						<tr>
							<td>
								<%= ordered_item.created_at %>
							</td>
							<td>
								<%= guest.family_name %>
								<%= guest.last_name %>
							</td>
							<td>
								<%= ordered_item.quantity %>
							</td>
							<td>
							</td>
						</tr>
				<% end %>
			<% end %>
	</table>