
<h2>注文詳細画面</h2>
<table>
	<thead>
		<tr>
			<th>購入者</th>
			<td><%= @order.guest.family_name %><% @order.guest.last_name %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><% %></td>
		</tr>
		<tr>
			<th>支払方法</th>
			<td><%= @order.payment_method  %></td>
		</tr>
		<tr>
			<th>注文ステータス</th>
			<td>
				<%= form_for @order, url:admin_order_path do |f| %>
				<%= f.select :order_status, Order.order_statuses.keys %>
		        <input type="submit" value="更新">
		        <% end %>
			</td>
		</tr>

</table>

<table>
	<tr>
		<th>商品名</th>
		<th>単価（税込）</th>
		<th>数量</th>
		<th>小計</th>
		<th>制作ステータス</th>
	</tr>
		<tr>
			<td><%= @ordered_item.product.name %></td>
			<td><%= @ordered_item.tax_included_price %></td>
			<td><%= @ordered_item.quantity %></td>
			<td></td>
			<td></td>
		</tr>

</table>

