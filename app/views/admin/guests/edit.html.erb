<h1>会員編集画面</h1>

<%= form_for @guest,url:admin_guest_path(@guest.id) do |f| %>
	<table class="admin_guest_edit">
		<tr>
			<th>会員ID</th>
			<td><%= @guest.id %></td>
		</tr>
		<tr>
			<th>氏名</th>
			<td><%= f.text_field :family_name %></td><td><%= f.text_field :last_name %></td>
		</tr>
		<tr>
			<th>フリガナ</th>
			<td><%= f.text_field :family_name_kana %></td><td><%= f.text_field :last_name_kana %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= f.text_field :postcode %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= f.text_field :street_adress %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= f.text_field :phone_nember %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= f.email_field :email %></td>
		</tr>
		<tr>
			<th>ステータス</th>
			<td>
				<%= f.radio_button :delete_user_status, :true %>
	            <%= f.label :delete_user_status, "退会済み" %>
	            <%= f.radio_button :delete_user_status, :false %>
	            <%= f.label :delete_user_status, "有効" %>
			</td>
		</tr>
		<td><%= f.submit '変更を保存する' %></td>
	</table>
<% end %>