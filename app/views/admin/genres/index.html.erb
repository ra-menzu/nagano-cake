<!DOCTYPE html>
<html>
  <head>
    <title>ジャンル追加・一覧画面</title>
  </head>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>ジャンル追加・一覧画面</h1>
      <%= form_for(@genre, url: admin_genres_path) do |f| %>
        <div class="name">ジャンル
        <%= f.text_field :name %>
        <%= f.radio_button(:class_status, "有効") %>
        <%= f.label(:class_status, "有効", value: "有効" ) %>
        <%= f.radio_button(:class_status, "無効") %>
        <%= f.label(:class_status, "無効", value: "無効") %>
        <%= f.submit "追加", class:"btn btn-info btn-md" %>
        </div>
      <% end %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.class_status %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
</html>


