<div class="container">
	<div class="row">
		<div class="col-xs-2">
		<h3>ジャンル検索</h3>
			<% @genres.each do |genre| %>
				<ul>
					<li>
					<%= link_to genre.name,guest_products_path(genre_id: genre.id) %>
					</li>
				</ul>
			<% end %>
		</div>


		<div class="col-xs-10">
		<% if params[:genre_id] %>
			<h3><%= @genre.name %><%= "(全#{@genre.products.count}件)" %></h3>

			<% else %>
			<h3>商品一覧 <%= "(全#{@products.count}件)" %></h3>
		<% end %>


					<% @products.each do |product| %>
					<div class="top-product-cake">
							<%= attachment_image_tag product, :image, :fill, 200, 200, format: 'jpeg',fallback: "no_image.jpg" %>
							<h4 class="top-product-name">商品名<%= link_to product.name,guest_product_path(product.id) %></h4>
						<p>¥<%= product.non_tax_price %></p>
					</div>
				<% end %>
		</div>
	</div>
</div>