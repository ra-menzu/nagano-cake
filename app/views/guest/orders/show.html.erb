<!DOCTYPE html>
<html>
  <head>
  	<title>注文履歴詳細</title>
  </head>
  <body>
  <p>注文情報</p>
  <div class="continer">
    <div class="row">
      <div class="col-lg-6">
    <table class="table1">
      <tr>
      	<th>注文日</th>
        <td><%= @order.created_at.strftime('%Y年%m月%d日')%></td>
      </tr>
      <tr>
      	<th>配送先</th>
      	<td><p>〒<%= @order.postal_code %>
      		<%= @order.postal_adress %>
      		<%= @order.destination %></p>
      	</td>
      </tr>
      <tr>
      	<th>支払い方法</th>
      	<td><%= @order.payment_method %></td>
      </tr>
      <tr>
      	<th>ステータス</th>
      	<td><%=  %></td>
      </tr>
    </table>
    </div>

    <p>請求情報</p>
    <table class="table2">
      <tr>
      	<th>商品合計</th>
        <% @sum = 0 %>
        <% @order.ordered_items.each do |i| %>
      	<% sub_total = i.tax_included_price * i.quantity %>
        <% @sum += sub_total %>
        <% end %>
        <td><%= @sum %></td>
      </tr>
      <tr>
      	<th>配送料</th>
      	<td><%= @order.postage %></td>
      </tr>
      <tr>
      	<th>ご請求額</th>
      	<td><%= @order.billing_amount %></td>
      </tr>
    </table>

    <p>注文内容</p>
    <table class="table3">
    <thead>
      <tr>
      	<th>商品</th>
      	<th>単価(税込)</th>
      	<th>個数</th>
      	<th>小計</th>
      </tr>
    </thead>
    <tbody>
    <% @order.ordered_items.each do |i| %>
      <tr>
      	<td><%= i.product.name %></td>
        <td><%= i.tax_included_price %></td>
        <td><%= i.quantity %></td>
        <td><%= i.tax_included_price * i.quantity %></td>
    <% end %>
    </tbody>
  </body>
</html>