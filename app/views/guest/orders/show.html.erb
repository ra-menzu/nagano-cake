<!DOCTYPE html>
<html>
  <head>
  	<title>注文履歴詳細</title>
  </head>
  <body>
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <strong>注文情報</strong>
          <table border="1" rules="all"class="table table-striped">
            <tr>
            	<th id="th-top">注文日</th>
              <td id="td-top"><%= @order.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
            </tr>
            <tr>
            	<th>配送先</th>
            	<td><p>〒<%= @order.postal_code %>
            		<%= @order.postal_adress %>
            		<%= @order.destination %></p>
            	</td>
            </tr>
            <tr>
            	<th>支払い方法</th>
            	<td><%= @order.payment_method %></td>
            </tr>
            <tr>
            	<th>ステータス</th>
            	<td><%= @order.order_status %></td>
            </tr>
          </table>
      </div>

    <div class="col-xs-6">
        <strong>請求情報</strong>
          <table border="1" rules="all"class="table table-striped">
            <tr>
            	<th id="th-top">商品合計</th>
              <% @sum = 0 %>
              <% @order.ordered_items.each do |i| %>
              <% @sub_total = i.tax_included_price * i.quantity %>
              <% @sum += @sub_total %>
              <% end %>
              <td id="td-top">
                <%= @sum %>円
              </td>
            </tr>
            <tr>
            	<th>配送料</th>
            	<td><%= @order.postage %>円</td>
            </tr>
            <tr>
            	<th>ご請求額</th>
            	<td><%= @order.billing_amount %>円</td>
            </tr>
          </table>
      </div>
  </div>

  <div class="col-xs-6">
    <div class="row">
        <strong>注文内容</strong>
        <table border="1" rules="all"class="table table-striped">
          <tr>
          	<th id="th-top">商品</th>
          	<th id="th-top">単価(税込)</th>
          	<th id="th-top">個数</th>
          	<th id="th-top">小計</th>
          </tr>
          <% @order.ordered_items.each do |i| %>
          <tr>
            <td><%= i.product.name %></td>
            <td><%= i.tax_included_price %>円</td>
            <td><%= i.quantity %></td>
            <td><%= i.tax_included_price * i.quantity %>円</td>
          <% end %>
      </div>
    </div>
  </tr>
  </body>
</html>