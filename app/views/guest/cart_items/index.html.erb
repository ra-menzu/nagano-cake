
<h3>ショッピングカート</h3>



<table class="table">
	<thead class="thead-light">
	  <tr>
	    <th>商品名</th>
	    <th>単価(税込)</th>
	    <th>数量</th>
	    <th>小計</th>
	    <th>   </th>
	  </tr>
	</thead>

<%= link_to "カートを空にする","/guest/cart_item", method: :delete, class: "btn btn-sm btn-danger" %>
	<tbody>
		<% sum = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tr>
	  	   <td> <img src="<%= cart_item.product.image_id %>"><%= cart_item.product.name %></td>
	  	   <td><%= (cart_item.product.non_tax_price * 1.1).floor %>円</td>
	  	    <%= form_for cart_item, url: guest_cart_item_path(cart_item) do |f| %>
	  	   <td><%= f.number_field :quantity %><%= f.submit "変更" %></td>
	  	    <% end %>
	  	   <td><%= sub_total = (cart_item.product.non_tax_price * 1.1).floor * cart_item.quantity %></td>
	  	   <td><%= link_to "削除する", guest_cart_item_path(cart_item), method: :delete %></td>
		   <% sum += sub_total %>
        </tr>
        <% end %>
	</tbody>
</table>

<p>合計金額</p>
<p><%= sum %>円</p>



<%= link_to "買い物を続ける", guest_products_path, class: "btn btn-outline-danger mt-5" %>
<%= link_to "情報入力に進む", new_guest_order_path, class: "btn btn-outline-danger mt-5" %>

